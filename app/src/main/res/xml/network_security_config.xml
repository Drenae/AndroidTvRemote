<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <debug-overrides>
        <trust-anchors>
            <!-- Trust user added CAs while debuggable only -->
            <certificates src="user" />
            <!-- Vous pourriez aussi avoir besoin de trust-anchors system pour les CA normales -->
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
    <!-- Optionnel, pour les builds release, vous seriez plus restrictif -->
    <!-- Ou pour autoriser un domaine/IP spécifique avec un certificat auto-signé spécifique -->
    <!--
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">your-tv-local-domain-or-ip.com</domain>
        <trust-anchors>
            <certificates src="@raw/your_tv_certificate_if_you_had_it"/>
        </trust-anchors>
    </domain-config>
    -->
    <!-- Configuration de base pour autoriser le trafic chiffré, mais toujours vérifier les certificats par défaut -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
